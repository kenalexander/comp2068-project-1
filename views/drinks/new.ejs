<% include ../partials/header %>

<section>
  <form action="/drinks/" method="post">
    <fieldset>
      <legend>Drink Information</legend>

      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="drink_name" name="drinkName" placeholder="Beer" required>
      </div>

      <div class="form-group">
        <label for="name">Volume</label>
        <input type="number" class="form-control" id="drink_name" name="volume" placeholder="Oz." required>
      </div>

      <div class="form-group">
        <label for="name">Alcohol Limit</label>
        <input type="number" class="form-control" id="drink_name" name="alcoholLimit" placeholder="%" required>
      </div>

      <div class="form-group">
        <label for="name">Description</label>
        <input type="text" class="form-control" id="drink_name" name="description" placeholder="Optional ie. Crack a Cold One">
      </div>
    </fieldset>

    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-sm">Create Drink</button>
    </div>
  </form>
</section>

<% include ../partials/footer %>