<% include ../partials/header %>
  
<section>

  <div class="row">

    <div class="col-xl">
      <div class="card">
        <div class="card-body">
          <center>
          <h5 class="card-title">
            <%= drink.drinkName %>
          </h5>

          <p>
            Alcohol Content: <%= drink.alcoholLimit %>%
          </p>
          
          <p>
            Volume: <%= drink.volume %> Ounces
          </p>

          <p>
            <% if (drink.description != null) { %>
             <p> Description: <%= drink.description %></p>
            <% } %>
          </p>
          
          <% if (authenticated) { %>
            <div class="actions">
              <a href="/drinks/<%= drink.id %>/edit" class="btn btn-primary btn-sm">Edit</a>

              <form action="/drinks/<%= drink.id %>/delete" method="post"  onsubmit="return confirm('DANGER ZONE');">
                <input type="hidden" name="id" value="<%= drink.id %>">
                <button type="submit" class="btn btn-danger btn-sm">DELETE</button>
              </form>
            </div>
          <% } %>
        </center>
        </div>
      </div>
    </div>

  </div>
</section>

<% include ../partials/footer %>